<div class="container section-header">
	<div class="row">
		<div class="col-sm-6">
			<h1>Works</h1>
		</div>
		<div class="col-sm-6">
			<div class="form-group row pull-right">
				<label for="workSort">Sort: </label>
				<select class="form-control" id="workSort">
					<option value="">(select one)</option>
		      <option value="money">For money</option>
		      <option value="fun">For fun</option>
		    </select>
			</div>
		</div>
	</div>
</div>
<div class="container m-t-md">
		<!-- if galleries -->
		{{#if works}}
			<div class="row card-deck">
			{{#each works}}
					<div class="col-xs-12 col-md-6 col-lg-4">
							<article class="card work-item">
								<!-- {{#if cover}}
									<img class="card-img-top img-responsive" src="{{{cloudinaryUrl image width=750 height=450 crop='fit' }}}" alt="Card image cap">
								{{/if}} -->
								{{#if cover }}
								<div class="work-cover-container">
									<div class="work-cover"
										style='{{{imgBackground cover width=348 height=217 crop='fit'}}} width: 100%;'>
									</div>
									<div class="work-cover">
											<img src="{{{cloudinaryUrl logo width=348 height=217 crop='fit' }}}" alt="{{title}}" class="img-responsive work-logo">
									</div>
									<div class="work-cover">
										<a href="{{workUrl slug}}" class="btn btn-success">Read more</a>
										<a href="" target="_blank" class="btn btn-success">View site</a>
									</div>
								</div>
								{{/if}}
								<div class="card-block">
									<!-- <h4 class="card-title">{{ title }} | <small>{{ publishedDate }}</h4> -->
									<h4 class="card-title">{{ title }}</h4>
									<hr>
									<p class="card-text">{{{ content.brief }}}</p>
									<!-- <a href="{{ workUrl slug }}" class="btn btn-outline-success"> {{ btnText }} </a> -->
								</div>
								<div class="card-footer">
									<p class="card-text text-right"><small class="text-muted ">Last updated {{ formatRelative publishedDate }}</small></p>
								</div>
							</article>
					</div>
			{{/each}}
			</div>
		{{else}}
		<!-- else -->
		<h3 class="text-muted">There are no works yet. Being that this is a portfolio website, one may expect that this indicates an <em>internal server error 404.</em></h3>
		{{/if}}
</div>
