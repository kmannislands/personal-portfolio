<section class="work-header"
	{{#if data.work.cover}}
		style='{{{imgBackground data.work.cover width=1000 height=700 crop='fit'}}}'
	{{/if}}>
	<div class="container">
		{{#if data.work.cover}}
			<img src="{{cloudinaryUrl data.work.logo }}" alt="">
		{{/if}}
	</div>
</section>

<section class="work-info">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1>{{data.work.title}}</h1>
				<hr>
				{{{data.work.content.extended}}}
			</div>
			<div class="col-3">
				{{#each data.work.technologies}}
					<li><a href="">{{name}}</a></li>
				{{/each}}
			</div>
			<div class="col-3">
				{{#each data.work.roles}}
					<li><a href="">{{name}}</a></li>
				{{/each}}
			</div>
			<div class="col-sm-12">
				<p><a class="btn-default" href="/works"><i class="fa fa-arrow-left"></i> back to the all works</a></p>
				<hr>
			</div>
		</div>
	</div>
</section>


<div class="container section-header">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article class="work-single">
				<div class="work-info">
					{{#if data.work.image}}<img src="{{{cloudinaryUrl data.work.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
				</div>
			</article>
		</div>
	</div>
</div>
