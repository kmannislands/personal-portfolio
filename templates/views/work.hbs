<section class="work-header"
	{{#if data.work.image}}
		style="background-image: url({{{cloudinaryUrl data.work.image width=750 height=450 crop='fit' }}})"
	{{/if}}>
	<div class="container">
		<h1>{{data.work.title}}</h1>
	</div>
</section>

<section class="work-info">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				{{{data.work.content.extended}}}
			</div>
			<div class="col-3">
			</div>
			<div class="col-3">

			</div>
		</div>
	</div>
</section>


<div class="container section-header">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article class="work-single">
				<p><a class="btn-default" href="/works"><i class="fa fa-arrow-left"></i> back to the all works</a></p>
				<hr>
				<header>
					<h1></h1>
				</header>
				<div class="work-info">
					{{#if data.work.image}}<img src="{{{cloudinaryUrl data.work.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
				</div>
			</article>
		</div>
	</div>
</div>
